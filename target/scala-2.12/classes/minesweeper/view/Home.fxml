<AnchorPane prefHeight="800.0" prefWidth="800.0" styleClass="home-anchor-pane" stylesheets="@style.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="minesweeper.view.HomeController">
