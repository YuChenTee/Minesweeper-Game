                        <Button alignment="CENTER" mnemonicParsing="false" onAction="#start" prefHeight="31.0" prefWidth="100.0" styleClass="start-button" text="Start" textAlignment="CENTER" GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="0" GridPane.valignment="CENTER" />
